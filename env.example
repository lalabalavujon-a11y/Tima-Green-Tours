# Tima Green Tours - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.timagreentours.com
NEXT_PUBLIC_WEBSITE_URL=https://timagreentours.com

# API Configuration
API_BASE_URL=https://api.timagreentours.com
API_SECRET_KEY=your_api_secret_key_here

# Database (if applicable)
DATABASE_URL=your_database_url_here

# Authentication
NEXTAUTH_URL=https://app.timagreentours.com
NEXTAUTH_SECRET=your_nextauth_secret_here

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# Contact/Booking
CONTACT_URL=https://app.timagreentours.com/contact/

# Email sending (optional). Create a free key at https://resend.com
RESEND_API_KEY=
CONTACT_RECEIVE_EMAIL=bookings@timagreentours.com
CONTACT_FROM_EMAIL="Tima Green Tours <web@timagreentours.com>"

# Security
NODE_ENV=production
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# Media / Photos
NEXT_PUBLIC_USE_LOCAL_TOUR_PHOTOS=true

# Admin (protect /admin/payment-links)
ADMIN_ACCESS_KEY=change-me

# Payment Mode
PAYMENT_MODE=test

# Stripe webhooks (optional for Payment Link checkout events)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Google Calendar (service account)
# Share your calendar with the service account email below
GOOGLE_SA_EMAIL=
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
GOOGLE_CALENDAR_ID=7c946f45f3b3918035d691a7e1a4f12dbc55aad72978973d50ac5171538ae013@group.calendar.google.com
GOOGLE_CALENDAR_TIMEZONE=Pacific/Pago_Pago

# Public embed (optional)
NEXT_PUBLIC_CALENDAR_EMBED_SRC="https://calendar.google.com/calendar/embed?src=7c946f45f3b3918035d691a7e1a4f12dbc55aad72978973d50ac5171538ae013%40group.calendar.google.com&ctz=Pacific%2FPago_Pago"

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Admin link visibility in navbar
NEXT_PUBLIC_SHOW_ADMIN_LINKS=false

# Google Sheets (Mini CRM)
GOOGLE_SHEETS_ID=
LEADS_SHEET_NAME=Leads
POSTS_SHEET_NAME=Posts
QUOTES_SHEET_NAME=Quotes

# Optional social webhook (Zapier/Make/Custom)
SOCIAL_WEBHOOK_URL=
ZAPIER_WEBHOOK_URL=
MAKE_WEBHOOK_URL=

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=

# Public Social Profiles (optional)
NEXT_PUBLIC_FACEBOOK_URL=
NEXT_PUBLIC_INSTAGRAM_URL=
NEXT_PUBLIC_TIKTOK_URL=
NEXT_PUBLIC_YOUTUBE_URL=
NEXT_PUBLIC_X_URL=

# AI / LangChain / LangSmith
# Choose your model; defaults are fine for most cases
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3

# Assistants API sync (optional)
# Used by scripts/sync-assistants.ts to upsert assistants from YAML specs
TGT_OPENAI_API_KEY=
NEXT_PUBLIC_TGT_ASSISTANT_ID=
NEXT_PUBLIC_ENABLE_ASSISTANTS_WIDGET=false

# LangSmith tracing and project naming (optional but recommended)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=Tima Green Tours
