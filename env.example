# Tima Green Tours - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.timagreentours.com
NEXT_PUBLIC_WEBSITE_URL=https://timagreentours.com

# API Configuration
API_BASE_URL=https://api.timagreentours.com
API_SECRET_KEY=your_api_secret_key_here

# Database (if applicable)
DATABASE_URL=your_database_url_here

# Authentication
NEXTAUTH_URL=https://app.timagreentours.com
NEXTAUTH_SECRET=your_nextauth_secret_here

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# Email sending (optional). Create a free key at https://resend.com
RESEND_API_KEY=your_resend_key
CONTACT_TO=bookings@timagreentours.com
CONTACT_FROM=web@timagreentours.com

# Security
NODE_ENV=production
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here
